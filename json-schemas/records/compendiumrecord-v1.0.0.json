{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "local://records/compendiumrecord-v1.0.0.json",
  "title": "Storm-Compendium Compendium Record Schema v1.0.0",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "$ref": "local://definitions-v1.0.0.json#/$schema"
    },
    "id": {
      "$ref": "local://definitions-v1.0.0.json#/identifier"
    },
    "pid": {
      "$ref": "local://definitions-v1.0.0.json#/internal-pid"
    },
    "updated": {
      "description": "Record publication date (EDTF level 0 format).",
      "type": "string"
    },
    "created": {
      "description": "Record publication date (EDTF level 0 format).",
      "type": "string"
    },
    "metadata": {
      "description": "Resource metadata",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": {
          "description": "Title of the record",
          "type": "string"
        },
        "description": {
          "description": "Description for record",
          "type": "string"
        },
        "execution": {
          "description": "Execution metadata",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "environment": {
              "description": "Execution environment description",
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "descriptor": {
                  "description": "Software component used to describe the execution environment",
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "uri": {
                      "description": "URI to the software",
                      "type": "string"
                    },
                    "name": {
                      "description": "Software name",
                      "type": "string"
                    },
                    "version": {
                      "description": "Software version",
                      "type": "string"
                    }
                  }
                },
                "meta": {
                  "description": "Environment metadata generated by the descriptor",
                  "type": "object"
                }
              }
            },
            "data": {
              "description": "Data (Input and Output) used in the execution",
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "inputs": {
                  "description": "Input files of the execution",
                  "type": "array",
                  "items": {
                    "description": "Input files",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "key": {
                        "description": "File key (Same as defined in the files section)"
                      }
                    }
                  }
                },
                "outputs": {
                  "description": "Input files of the execution",
                  "type": "array",
                  "items": {
                    "description": "Input files",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "key": {
                        "description": "File key (Same as defined in the files section)"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "files": {
      "type": "object",
      "description": "Files associated with the record",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Set to false for metadata only records."
        },
        "default_preview": {
          "type": "string",
          "description": "Key of the default previewed file."
        },
        "order": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "entries": {
          "type": "object",
          "additionalProperties": {
            "$ref": "local://project/definitions-v1.0.0.json#/file"
          }
        },
        "meta": {
          "type": "object",
          "additionalProperties": {
            "type": "object"
          }
        }
      }
    }
  }
}
